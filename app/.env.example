# Prism AI - Environment Configuration
# Copy this file to .env and configure your AI providers

# ============================================
# AI Provider Configuration
# ============================================

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# OpenAI Model (default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Azure OpenAI (https://azure.microsoft.com/en-us/products/ai-services/openai-service)
AZURE_AI_ENDPOINT=
AZURE_AI_API_KEY=
AZURE_AI_DEPLOYMENT=

# Local AI - Ollama (https://ollama.ai)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# Local AI - LM Studio (https://lmstudio.ai)
LM_STUDIO_API_URL=http://localhost:1234

# Custom AI Endpoint
CUSTOM_AI_ENDPOINT=
CUSTOM_AI_API_KEY=

# ============================================
# Application Settings
# ============================================

NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Demo mode - shows simulated responses without requiring an AI provider
NEXT_PUBLIC_DEMO_MODE=true

# App URL (used for metadata and OG images)
NEXT_PUBLIC_APP_URL=http://localhost:3000
